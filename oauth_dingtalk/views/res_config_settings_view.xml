<?xml version="1.0"?>
<openerp>
    <data>
        <record id="res_config_settings_view_inherit_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.inherit.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" string="钉钉" data-key="oauth_dingtalk">
                        <h2>钉钉扫码参数</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="dingtalk_qrKey"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="dingtalk_qrKey"/>
                                    <div class="text-muted">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="dingtalk_qrSecret"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="dingtalk_qrSecret"/>
                                    <div class="text-muted">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h2>钉钉应用参数</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="dingtalk_appKey"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="dingtalk_appKey"/>
                                    <div class="text-muted">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="dingtalk_appSecret"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="dingtalk_appSecret"/>
                                    <div class="text-muted">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
